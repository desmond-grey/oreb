<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:id="@+id/guidanceLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:layout_weight="1"
    android:textAlignment="textEnd">

    <TextView
        android:id="@+id/tonic_spinner_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/tonic"
        android:textIsSelectable="false"
        app:layout_constraintEnd_toEndOf="@+id/barrier4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/tonic_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/tonic_spinner_label"
        app:layout_constraintStart_toEndOf="@+id/barrier4"
        app:layout_constraintTop_toTopOf="@+id/tonic_spinner_label" />

    <TextView
        android:id="@+id/scale_spinner_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/scale"
        android:textIsSelectable="false"
        app:layout_constraintEnd_toEndOf="@+id/barrier4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tonic_spinner_label" />

    <Spinner
        android:id="@+id/scale_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/scale_spinner_label"
        app:layout_constraintStart_toEndOf="@+id/barrier4"
        app:layout_constraintTop_toTopOf="@+id/scale_spinner_label" />

    <android.support.constraint.Barrier
        android:id="@+id/barrier4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="end"
        app:constraint_referenced_ids="scale_spinner_label,tonic_spinner_label"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>